<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/animeFragment"
        android:name="com.seinwaihtut.animesh.Anime.AnimeFragment"
        android:label="fragment_anime"
        tools:layout="@layout/fragment_anime" >

        <argument
            android:name="anime_parcelable"
            app:argType="com.seinwaihtut.animesh.DB.Anime" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.seinwaihtut.animesh.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_animeFragment"
            app:destination="@id/animeFragment" >

        </action>
    </fragment>

    <navigation android:id="@+id/login_nested_graph"
        app:startDestination="@id/logInMainFragment">
        <fragment
            android:id="@+id/logInMainFragment"
            android:name="com.seinwaihtut.animesh.LogIn.LogInMainFragment"
            android:label="fragment_log_in_main"
            tools:layout="@layout/fragment_log_in_main">
            <action
                android:id="@+id/action_logInMainFragment_to_logInFragment"
                app:destination="@id/logInFragment"
                app:popUpToInclusive="false" />
            <action
                android:id="@+id/action_logInMainFragment_to_signUpFragment"
                app:destination="@id/signUpFragment"
                app:popUpToInclusive="false" />
        </fragment>
        <fragment
            android:id="@+id/logInFragment"
            android:name="com.seinwaihtut.animesh.LogIn.LogInFragment"
            android:label="fragment_log_in"
            tools:layout="@layout/fragment_log_in">
            <action
                android:id="@+id/action_logInFragment_to_mainFragment2"
                app:destination="@id/mainFragment"
                app:launchSingleTop="true"
                app:popUpTo="@id/logInMainFragment"
                app:popUpToInclusive="true" />
        </fragment>
        <fragment
            android:id="@+id/signUpFragment"
            android:name="com.seinwaihtut.animesh.LogIn.SignUpFragment"
            android:label="fragment_sign_up"
            tools:layout="@layout/fragment_sign_up">
            <action
                android:id="@+id/action_signUpFragment_to_logInFragment"
                app:destination="@id/logInFragment"
                app:popUpTo="@id/signUpFragment"
                app:popUpToInclusive="true" />
        </fragment>
    </navigation>
</navigation>
