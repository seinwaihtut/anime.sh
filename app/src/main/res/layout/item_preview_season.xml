<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingTop="8dp"
    android:paddingRight="8dp">

    <ImageView
        android:id="@+id/iv_item_preview_season_image"
        android:layout_width="140dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/placeholder" />


    <TextView
        android:id="@+id/tv_item_preview_season_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="Title"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_item_preview_season_image"
        app:layout_constraintTop_toTopOf="@+id/iv_item_preview_season_image" />

    <TextView
        android:id="@+id/tv_item_preview_season_score"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Score"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_item_preview_season_title"
        app:layout_constraintStart_toStartOf="@+id/tv_item_preview_season_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_preview_item_season_season_year" />

    <TextView
        android:id="@+id/tv_item_preview_season_synopsis"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:lines="6"
        android:text="Synopsis"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_item_preview_season_title"
        app:layout_constraintStart_toStartOf="@+id/tv_item_preview_season_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_preview_season_genres" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintTop_toBottomOf="@+id/iv_item_preview_season_image"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/tv_item_preview_season_genres"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="genres"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_item_preview_season_title"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_item_preview_season_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_preview_season_score" />

    <TextView
        android:id="@+id/tv_preview_item_season_season_year"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Season"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_item_preview_season_title"
        app:layout_constraintStart_toStartOf="@+id/tv_item_preview_season_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_preview_season_title" />
</androidx.constraintlayout.widget.ConstraintLayout>